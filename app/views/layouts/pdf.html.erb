# file: rails-generate-pdf/views/layotus/pdf.html.erb
<!DOCTYPE html>
<html>
<head>
<title>PDFs - Ruby on Rails</title>
<style>
html, body {
	font-family: 'Lato', sans-serif;
}
table {
	border-collapse: collapse;
	border-spacing: 1px;
}
th {
	text-align: left;
	font-size: 14px;
	padding: 0 5px;
}
td {
	border: 2px solid #AAA;
	padding: 3px 5px;
	font-size: 14px;
}
h3 {
	font-size: 24px;
	text-align: center;
	margin-bottom: 50px;
}
h4 {
	font-size: 22px;
	margin-bottom: 0;
}
p {
	font-size: 14px;
	margin-bottom: 5px;
}
a {
	font-size: 14px;
	line-height: 25px;
	color: #555;
	text-decoration: none;
	margin-left: 20px;
}
a:hover {
	text-decoration: underline;
}
strong {
	font-weight: bold;
}
.subtitle {
	margin: 0 0 20px 0;
}
.mealsub {
	font-size: 17px;
	margin: 10px 0 20px 0;
}
.customer-header {
	margin: 0;
}
.order-info {
	margin-bottom: 25px;
}

@media screen {
	html, body {
		margin: 0;
		padding: 0;
	}
	.browser-wrapper {
		width: 90%;
		max-width: 900px;
		margin: 0 auto;
	}
	.page-break {
		margin: 50px 0;
		border-top: 1px solid #AAA;
	}
	.logo, .print-footer, .print-show {
		display: none;
	}
}

@media print {
	.page-title {
		display: none;
	}
	.print-show {
		display: block;
	}
	.logo {
		display: block;
		margin-bottom: 15px;
		float: left;
	}
	.order-info {
		float: left;
		padding-left: 75px;
	}
	.order-customer {
		clear: both;
		margin-bottom: 15px;
	}
	.order-body td {
		font-size: 12px;
	}
	.payment-left {
		float: left;
		width: 300px;
	}
	.payment-right {
		float: left;
		margin-left: 25px;
	}
	.customer-note {
		clear: both;
		padding-top: 15px;
		font-weight: bold;
	}
	.phone {
		font-weight: bold;
	}
	.page-break {
    	break-before: always;
		page-break-before: always;
        page-break-inside: avoid;
	}
	.print-footer {
		display: block;
		margin-top: 50px;
	}
}
</style>
</head>
<body>
    <%= yield %>
</body>
</html>
